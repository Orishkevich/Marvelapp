<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:weightSum="1"
    android:background="@color/items" >

    <ImageButton
        android:id="@+id/recyclerViewItemIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/ic_world"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_map" />

    <TextView
        android:id="@+id/recyclerViewItemName"
        android:paddingLeft="50dp"
        android:layout_toRightOf="@+id/recyclerViewItemIcon"
        android:layout_toEndOf="@+id/recyclerViewItemIcon"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="16sp"
        android:textColor="@color/text_items"/>

    <ImageButton
        android:id="@+id/recyclerViewItemDownButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/ic_world"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_import" />

    <ProgressBar
        android:id="@+id/prog_down_item"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewItemIcon"
        android:gravity="center"
        android:indeterminate="false"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
         />

</RelativeLayout>




